<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.component.fx.plugin_test.ui.LeafLoadingView
        android:background="@color/darkorange"
        android:id="@+id/leaf_loading_view"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_current_progress"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="4dp" />

            <SeekBar
                android:id="@+id/seek_bar_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:maxHeight="1dp"
                android:minHeight="1dp"
                android:padding="4dp"
                android:secondaryProgress="30"
                android:thumb="@drawable/test_seekbar_thumb_bg"
                android:progressDrawable="@drawable/test_seekbar_bg" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>