<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toutiao_draw_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PluginTouTiaoActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include layout="@layout/toutiao_main_tool_bar_layout" />

        <include layout="@layout/toutiao_main_content_layout" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/toutiao_bottom_nav_view"
            app:labelVisibilityMode="labeled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/viewBackground"
            app:elevation="16dp"
            app:layout_behavior="com.component.fx.plugin_toutiao.behavior.NeetBottomNavViewBehavior"
            app:itemIconTint="@drawable/toutiao_botton_nav_test_select"
            app:itemTextColor="@drawable/toutiao_botton_nav_test_select"
            app:menu="@menu/toutiao_main_bottom_menu">

        </android.support.design.widget.BottomNavigationView>

    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/toutiao_draw_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/toutiao_main_draw_header"
        app:menu="@menu/toutiao_main_draw_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>