<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.component.fx.plugin_base">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".WebViewActivity"
            android:theme="@style/Base_No_Title.Translucent" />

        <service android:name=".polling.PollingService" />
        <service android:name=".polling.PollingBroadcastService" />

        <receiver android:name=".polling.PollingAlarmReceiver" />

        <receiver
            android:name=".receiver.SystemReceiver"
            android:enabled="true">
            <intent-filter>

                <!--开机广播-->
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />

                <!--系统完成启动后，一次广播 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <!--时区变化-->
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />

                <!--仅在语言环境发生变化时发送-->
                <action android:name="android.intent.action.LOCALE_CHANGED" />

                <!--软件包被移除-->
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />

                <!--应用数据清除-->
                <action android:name="android.intent.action.PACKAGE_DATA_CLEARED" />


                <!--涉及到存储卡状态改变的时候必须添加-->
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
    </application>
</manifest>