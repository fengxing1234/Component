<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--5.0 版本 以上 使用-->
    <style name="Base_No_Title.Status">

        <!--window 窗口透明-->
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TouTiao_DayTheme" parent="TouTiao_Base_Theme.NoActionBar">
        <!--toolbar 背景颜色 -->
        <item name="colorPrimary">@color/toutiao_colorPrimary</item>
        <!--状态栏的背景颜色-->
        <item name="colorPrimaryDark">@color/toutiao_colorPrimaryDark</item>
        <!--一般控件的选中效果默-->
        <item name="colorAccent">@color/toutiao_colorAccent</item>
        <!--toolbar 字体颜色-->
        <item name="android:textColorPrimary">@color/toutiao_textColorPrimary</item>
        <!--窗口背景-->
        <item name="android:windowBackground">@color/toutiao_viewBackground</item>
        <!--系统的 底部导航栏-->
        <item name="android:navigationBarColor">@color/toutiao_colorPrimary</item>
        <!--状态栏颜色-->
        <!--<item name="android:statusBarColor">@color/transparent</item>-->
        <!--控制元件的默认状态颜色-->
