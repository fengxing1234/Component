<resources>

    <style name="Base_Theme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <!-- Base application theme. -->
    <style name="Base_App_Theme" parent="Base_Theme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_colorPrimary</item>
        <item name="colorPrimaryDark">@color/base_colorPrimaryDark</item>
        <item name="colorAccent">@color/base_colorAccent</item>
    </style>

    <!--无标题-->
    <style name="Base_No_Title" parent="Base_Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--透明窗口-->
    <style name="Swipe_Back_AppTheme" parent="Base_Theme">

        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Base_No_Title.Translucent" parent="Base_No_Title">
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!--头条样式-->
    <style name="TouTiao_Base_Theme" parent="Theme.AppCompat.DayNight.DarkActionBar">

    </style>

    <!--头条 取消ActionBar-->
    <style name="TouTiao_Base_Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--头条 黑天 模式-->
    <style name="TouTiao_Night_Theme" parent="TouTiao_Base_Theme.NoActionBar">

        <item name="colorPrimary">@color/toutiao_colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/toutiao_colorPrimaryDark_night</item>
        <item name="colorAccent">@color/toutiao_colorAccent_night</item>
        <item name="android:textColorPrimary">@color/toutiao_textColorPrimary_night</item>
        <item name="android:windowBackground">@color/toutiao_viewBackground_night</item>
    </style>

    <!--头条 白天 模式-->
    <style name="TouTiao_DayTheme" parent="TouTiao_Base_Theme.NoActionBar">
        <!--toolbar 背景颜色 -->
        <item name="colorPrimary">@color/toutiao_colorPrimary</item>
        <!--状态栏的背景颜色-->
        <item name="colorPrimaryDark">@color/toutiao_colorPrimaryDark</item>

        <item name="colorAccent">@color/toutiao_colorAccent</item>
        <!--toolbar 字体颜色-->
        <item name="android:textColorPrimary">@color/toutiao_textColorPrimary</item>
        <!--窗口背景-->
        <item name="android:windowBackground">@color/toutiao_viewBackground</item>


    </style>

    <style name="TouTiao_Base_Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>


    <!--头条 tablayout 统一样式-->
    <style name="TouTiao_TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/toutiao_colorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <!--侧滑返回-->

    <style name="SwipeBackLayout">
        <item name="edge_size">50dp</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>


    <!--自定义 字体样式-->
    <style name="Base_Text_Style_Black">
        <item name="android:textSize">@dimen/base_text_size_16</item>
        <item name="android:textColor">@color/base_text_color_111</item>
    </style>

    <style name="Base_Text_Style_Small">
        <item name="android:textSize">@dimen/base_text_size_12</item>
        <item name="android:textColor">@color/base_text_color_normal</item>
    </style>

</resources>
