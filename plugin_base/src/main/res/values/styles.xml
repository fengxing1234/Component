<resources>

    <!-- Base application theme. -->
    <style name="login_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/share_colorPrimary</item>
        <item name="colorPrimaryDark">@color/share_colorPrimaryDark</item>
        <item name="colorAccent">@color/share_colorAccent</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dp</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="Swipe_Back_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
